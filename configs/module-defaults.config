#!/usr/bin/env nextflow

/*
 * ---------------------------------------------------------
 *  Nextflow config file for module specific default options
 * ---------------------------------------------------------
 */

params {
    modules {
        'cellranger_filter_gtf' {
            publish_dir      = "cellranger/filter_gtf"
            publish_results  = "all"
            outfile = "filtered.gtf"
            args = "--attribute=gene_biotype:protein_coding --attribute=gene_biotype:lncRNA --attribute=gene_biotype:pseudogene"
        }
        'cellranger_mkref' {
            publish_dir      = "cellranger/mkref"
            publish_results  = "all"
        }
        'cellranger_count' {
            publish_dir      = "cellranger/count"
            publish_results  = "all"
            args = ""
        }
        'gtf_tag_chroms' {
            publish_dir  = 'gtf_tag_chroms'

            args = "'MT', 'Z', 'W'"
        }
        'velocyto_run_10x' {
            publish_dir      = "velocyto"
            publish_results  = "all"
            args = ""
        }
        'velocyto_samtools' {
            publish_dir      = ""
            publish_results  = "none"
        }
    }
}
